package com.bridgelabz.controller;

import com.bridgelabz.implementation.AddressBook;
import com.bridgelabz.service.Service;

public class Controller 
{
	{
		Service service=new AddressBook();
		
		void addperson()
		{
			
			service.addperson();
		}
	
		void display()
		{
		
		service.display();
		}
		
		void search()
		{
			service.search();
		}
		
		void delete()
		{
			service.delete();
		}

		void update()
		{
			service.update();
		}
		void sortbyname()
		{
			service.sortbyzip();
		}
		
		void sortbyzip()
		{
			service.sortbyzip();
		}
	}

}
