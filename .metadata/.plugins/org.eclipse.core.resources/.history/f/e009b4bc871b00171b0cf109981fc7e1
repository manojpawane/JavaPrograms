package stack;
import java.util.*;
public class BankingCashCounter 
{
	 static String name="";
	 static int acc_no=0;
	 static double salary=0;
	static int i=0;
	static Queue q=new LinkedList();
	static Bank s[]=new Bank[10];
static	double balance=100000;
	
	public static void main(String[] args) 
	{
		Scanner sc=new Scanner(System.in);
		//Bank b1=new Bank();
		
		
		int ch=0;
		
		
		System.out.println();
		do
		{
			
			System.out.println("1. Deposit");
			System.out.println("2. Withdraw");
			
			System.out.println("3. Remove Deposit");
			System.out.println("4. Remove Withdrawl");
			System.out.println("5. Check Balance with Bank");
			System.out.println("6. Display");
			ch=sc.nextInt();
			
			switch(ch)
			{
			case 1:deposit();
					break;
			case 2:withdraw();
					break;
			case 3:remove();
					break;
			
			case 4:System.out.println("Total Cash:"+balance);
					break;
			case 5:display();
			break;
			}
			
		}
		while(ch!=6);
		
	}
	
	 static void deposit()
	{
	  	Scanner sc=new Scanner(System.in);
    	System.out.println("Enter Your Name");
		 name=sc.next();
		
		System.out.println("Enter your Account No.");
		 acc_no=sc.nextInt();
		
		System.out.println("Enter your Balance");
		salary=sc.nextDouble();
	
		
		s[i]=new Bank(acc_no,name,salary);
		q.add(s[i]);
		i++;
		
		System.out.println("Enter the Amount you have to deposit:");
		double sal=sc.nextDouble();
		salary=sal+salary;
		balance=sal+balance;
		
		
	}
    
	 static void withdraw()
	{
	  	Scanner sc=new Scanner(System.in);
    	System.out.println("Enter Your Name");
		 name=sc.next();
		
		System.out.println("Enter your Account No.");
		 acc_no=sc.nextInt();
		
		System.out.println("Enter your Balance");
		salary=sc.nextDouble();
	
		
		s[i]=new Bank(acc_no,name,salary);
		q.add(s[i]);
		i++;
		
		System.out.println("Enter the Amount you have to deposit:");
		double sal=sc.nextDouble();
		if(salary>sal && balance<=0)
		{
		salary=salary-sal;
		balance=balance-sal;
		}
		else
		{
		System.out.println("No sufficient balance");	
			
		}
		
	}    
	 
	static void remove()
	 {
		 q.remove();
	 }
 
	

}


class Bank
{  
    static int acc_no;  
    static String name;  
    static double balance;  
    
    
    Bank(int Acc_no,String Name,double Balance)
    {  
     acc_no=Acc_no;  
     name=Name;  
     balance=Balance;  
    }  
    
    public String toString()
	{
	return acc_no+"\t\t"+name+"\t\t"+balance;
	
	}
	
  }  
